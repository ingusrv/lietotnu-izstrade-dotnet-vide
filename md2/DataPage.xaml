<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="md2.DataPage"
             Title="DataPage">
    <ScrollView>
        <VerticalStackLayout>
            <!-- Pieliku add pogas arī pie pārējām sadaļām, lai bez testa datiem no nulles varētu izveidot visu struktūru -->
            <Label
                Text="Teachers"
                Style="{StaticResource SubHeadline}"
            />
            <Button
                Text="New Teacher"
                Clicked="OnTeacherCreateClicked"
            />
            <ListView ItemsSource="{Binding Teachers}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <VerticalStackLayout Margin="20">
                                <Label Text="{Binding}"/>
                            </VerticalStackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Label
                Text="Students"
                Style="{StaticResource SubHeadline}"
            />
            <Button
                Text="New Student"
                Clicked="OnStudentCreateClicked"
            />
            <ListView ItemsSource="{Binding Students}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <VerticalStackLayout Margin="20">
                                <Label Text="{Binding}"/>
                                <!-- par šiem met warning bet tomēr strādā
                            <Label Text="{Binding FullName}"/>
                            <Label Text="{Binding Gender}"/>
                            <Label Text="{Binding StudentIdNumber}"/>
                            -->
                                <Button
                                    Text="Edit"
                                    Clicked="OnStudentEditClicked"
                                    BindingContext="{Binding}"
                                />
                            </VerticalStackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Label
                Text="Courses"
                Style="{StaticResource SubHeadline}"
            />
            <Button
                Text="New Course"
                Clicked="OnCourseCreateClicked"
            />
            <ListView ItemsSource="{Binding Courses}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <VerticalStackLayout Margin="20">
                                <Label Text="{Binding}"/>
                            </VerticalStackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Label
                Text="Assignments"
                Style="{StaticResource SubHeadline}"
            />
            <Button
                Text="New Assignment"
                Clicked="OnAssignmentCreateClicked"
            />
            <ListView ItemsSource="{Binding Assignments}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <VerticalStackLayout Margin="20">
                                <Label Text="{Binding}"/>
                                <Button
                                    Text="Edit"
                                    Clicked="OnAssignmentEditClicked"
                                    BindingContext="{Binding}"
                                />
                                <Button
                                    Text="Delete"
                                    Clicked="OnAssignmentDeleteClicked"
                                    BindingContext="{Binding}"
                                />
                            </VerticalStackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <Label
                Text="Submissions"
                Style="{StaticResource SubHeadline}"
            />
            <Button
                Text="New Submission"
                Clicked="OnSubmissionCreateClicked"
            />
            <ListView ItemsSource="{Binding Submissions}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <VerticalStackLayout Margin="20">
                                <Label Text="{Binding}"/>
                                <Button
                                    Text="Edit"
                                    Clicked="OnSubmissionEditClicked"
                                    BindingContext="{Binding}"
                                />
                                <Button
                                    Text="Delete"
                                    Clicked="OnSubmissionDeleteClicked"
                                    BindingContext="{Binding}"
                                />
                            </VerticalStackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>