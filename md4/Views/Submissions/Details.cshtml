@model md4.Data.Entities.Submission

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Submission</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Assignment)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Assignment.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Student)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Student.FullName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SubmissionTime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SubmissionTime)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Score)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Score)
        </dd>
    </dl>
</div>
<div>
    @if (User.Identity != null && User.Identity.IsAuthenticated) {
        <span><a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> | </span>
    }
    <a asp-action="Index">Back to List</a> | 
    <a asp-controller="Assignments" asp-action="Details" asp-route-id="@Model?.AssignmentId">Back to Assignment Details</a>
</div>
